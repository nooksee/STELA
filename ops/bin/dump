#!/usr/bin/env bash
# SCOPE: platform = EVERYTHING except projects/

if [ "$1" == "--scope=platform" ]; then
    # Find ALL files, exclude .git and projects/, print path
    find . -type f -not -path "./.git/*" -not -path "./projects/*" | sort
else
    # Fallback (Default to everything minus git)
    find . -type f -not -path "./.git/*" | sort
fi
